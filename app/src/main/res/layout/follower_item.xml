<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingStart="8dp">

    <TextView
        android:id="@+id/follower_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/follower_action_button"
        android:layout_toLeftOf="@+id/follower_action_button"
        android:layout_toStartOf="@+id/follower_action_button"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        tools:text="Dave"/>

    <TextView
        android:id="@+id/follower_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/follower_name"
        android:textSize="12sp"
        tools:text="Pending"/>

    <Button
        android:id="@+id/follower_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="4dp"
        tools:text="Accept"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/follower_status"
        android:layout_margin="8dp"
        android:background="@android:color/black"/>

</RelativeLayout>